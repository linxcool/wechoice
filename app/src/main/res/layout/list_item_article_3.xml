<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_touch"
    android:padding="@dimen/def_padding">

    <TextView
        android:id="@+id/tvTitle"
        style="@style/txtStrong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:ellipsize="end"
        android:lines="1" />

    <LinearLayout
        android:id="@+id/ivIconLayout"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_below="@+id/tvTitle"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/bg_icon"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/ivIcon2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/tvTitle"
            android:layout_marginLeft="@dimen/def_margin"
            android:layout_marginRight="@dimen/def_margin"
            android:layout_weight="1"
            android:background="@color/bg_icon"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/ivIcon3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/tvTitle"
            android:layout_weight="1"
            android:background="@color/bg_icon"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvSummary"
        style="@style/txtSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivIconLayout"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_frame_green"
        android:textColor="@color/txt_small_green" />

    <TextView
        android:id="@+id/tvPubTime"
        style="@style/txtSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tvSummary"
        android:layout_toRightOf="@+id/tvSummary"/>

</RelativeLayout>
